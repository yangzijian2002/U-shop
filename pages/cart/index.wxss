page{
    background: #f4f4f4;
}
.page{
    padding: 20rpx 10rpx;
}
/* 头部 */
.infomation{
    background-color: #fff;
    margin-bottom: 15rpx;
    position: relative;
}
.infomation>image{
    width: 100%;
    position: absolute;
    bottom: 0;
    left: 0;
}
.infomation>view{
    margin: 30rpx;
    display: flex;
    position: relative;
}
.infomation>view>view>text{
    position: absolute;
    right: 0;
    top: 0;
}
.right{
    color: #ccc;
}
/* 商品列表 */
.list{
    margin-top: 40rpx;
    margin-bottom: 140rpx;
    background-color: #fff;
}
.list>.title{
    padding-left: 32rpx;
    height: 88rpx;
    display: flex;
    align-items: center;
    border-bottom: 1px solid #ddd;
}
.list>.title>image{
    margin-right: 12rpx;
    width: 44rpx;
}
.list>.commodity{
    height: 246rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    margin-bottom: 20rpx;
}
    /* 选中小标 */
.list>.commodity>icon{
    margin: 0 30rpx;
}
    /* 商品信息 */
.list>.commodity>view{
    height: 100%;
    border-top: 1px solid #ddd;
    box-sizing: border-box;
    display: flex;
    align-items: center;
}
        /* 商品图片 */
.list>.commodity>view>image{
    width: 160px;
    height: 160rpx;
    margin-right: 20rpx;
}
.list>.commodity>view>view{
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    margin-right: 18rpx;
    position: relative;
}
            /* 商品名称 */
.list>.commodity>view>view>.name{
    height: 103rpx;
    margin-top: 20rpx;
	overflow: hidden;
	text-overflow: ellipsis;
	display: -webkit-box;
	-webkit-line-clamp: 2;
	-webkit-box-orient: vertical;
}
                /* 商品价格与数量 */
.list>.commodity>view>view>view,.list>.commodity>view>view>view>.number{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    color: #666;
}
.list>.commodity>view>view>view{
    width: 80%;
}
.list>.commodity>view>view>view>text{
    color: #ea4451;
    font-size: 50rpx;
}
.list>.commodity>view>view>view>.number{
    position: absolute;
    right: 20rpx;
    bottom: 20rpx;
}
.list>.commodity>view>view>view>.number>view{
    height: 50rpx;
    width: 60rpx;
    border: 8rpx solid #666;
    text-align: center;
    font-weight: bold;
}
.list>.commodity>view>view>view>.number>text{
    margin: 0 30rpx;
    width: 60rpx;
    text-align: center;
}
.plusDis,.minusDis{
    border: 8rpx solid #ddd;
    color: #ddd;
}
/* 结算 */
.settlement{
    width: 100%;
    display: flex;
    height: 100rpx;
    align-items: center;
    justify-content: space-between;
    background-color: #fff;
    position: fixed;
    bottom: 0;
}
.settlement>view{
    height: 100%;
}
.settlement>.select,.settlement>.btn,.settlement>.price{
    display: flex;
    align-items: center;
}
.settlement>.select>icon{
    margin: 0 30rpx;
}
.settlement>.price{
    flex-direction: column;
    align-items: flex-start;
}
.settlement>.price>text{
    font-size: 35rpx;
}
.settlement .pric{
    color: #ea4451;
}
.settlement .pri{
    font-size: 44rpx;
}
.settlement>.price>view{
    font-size: 30rpx;
    color: #999;
}
.settlement>.btn{
    justify-content: center;
    width: 230rpx;
    background-color: #ea4451;
    color: #fff;
    text-align: center;
}
/* 空购物车 */
.empty>image{
    width: 40%;
    margin: 200rpx 0 60rpx;
}