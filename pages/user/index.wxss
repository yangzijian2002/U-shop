page{
    background-color: #f4f4f4;
}
/* 公共样式 */
.page{
    width: 90%;
    margin: 0 auto;
    background-color: #fff;
    margin-bottom: 30rpx;
}
.myData,.order>.content{
    display: flex;
}
.myData>view,.myData>view>navigator,.order>.content>view,.order>.content>view>navigator{
    width: 25%;
}
.right{
    color: #ccc;
    position: absolute;
    right: 20rpx;
}
/* 个人信息 */
.info{
    background-color: #ea4451;
}
.info>view{
    padding: 100rpx 0;
}
.info>view>image{
    width: 200rpx;
    margin-bottom: 40rpx;
    border-radius: 50%;
    border: 4px solid #fff;
}
.info>view>view{
    color: #fff;
    font-weight: bold;
}
.info>view>view>button{
    background-color: rgba(0,0,0,0);
    color: #fff;
}
/* 我的足迹数据 */
.myData{
    margin-top: -40rpx;
    padding: 30rpx 0;
}
.myData>view>navigator,.order>.content>view>navigator{
    height: 100%;
    width: 100%;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}
.myData>view>navigator{
    font-size: 28rpx;
    color: #666
}
/* 我的订单 */
.order>.title{
    padding-left: 16rpx;
    font-size: 40rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 1px solid #ddd;
}
.order>.content{
    padding-bottom: 30rpx;
}
.order>.content>view>navigator>text{
    white-space: nowrap;
}
.order>.content>view>navigator>image{
    width: 50%;
    margin: 20rpx 0;
}
/* 收货地址 */
.address,.other>view{
    padding: 30rpx 0;
    position: relative;
    padding-left: 16rpx;
}
/* 其他 */
.other{
    padding-left: 16rpx;
}
.other>view{
    border-bottom: 1px solid #ddd;
}